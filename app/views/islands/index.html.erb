<p id="notice"><%= notice %></p>

<h1>Islands</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Location</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @islands.each do |island| %>
      <tr>
        <td><%= island.name %></td>
        <td><%= island.country %></td>
        <td><%= island.location %></td>
        <td><%= island.description %></td>
        <td><%= island.price %></td>
        <td><%= link_to 'Show', island %></td>
        <td><%= link_to 'Edit', edit_island_path(island) %></td>
        <td><%= link_to 'Destroy', island, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

