<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>

    <p></p>
    <%= link_to 'Leave a review', new_review_path %>
    <p></p>

    <tr>
      <th>Rating</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rating %></td>
        <td><%= review.title %></td>
        <td><%= review.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
